#!/usr/bin/env bash
# -----------------------------------------------------------------------------
# Helper functions start with _ and aren't listed in this script's help menu.
# -----------------------------------------------------------------------------

set -euo pipefail

APP_NAME="$(basename "$(git rev-parse --show-toplevel)")" || APP_NAME="$(basename "$PWD")"
PROJECT_ROOT="$(git rev-parse --show-toplevel 2>/dev/null)" || PROJECT_ROOT="$PWD"

TTY="${TTY:-}"
if [[ ! -t 1 ]]; then
  TTY="-T"
fi

VERSION="$(cat "$PROJECT_ROOT"/VERSION 2>/dev/null)" || VERSION="dev"

help() {
  echo ""
  echo "-------------------"
  echo " tsk [task] [args] "
  echo "-------------------"
  declare -F | awk '{print "â—‰ " $3}' | grep -v "^_" | sort
}

run() {
  odin run "$PROJECT_ROOT" -define="VERSION=$VERSION" "$@"
}

debug() {
  odin run "$PROJECT_ROOT" -define="VERSION=$VERSION" -debug "$@"
}

debug:sanitize() {
  odin run "$PROJECT_ROOT" -define="VERSION=$VERSION" -debug -sanitize:address "$@"
}

build() {
  odin build "$PROJECT_ROOT" -define="VERSION=$VERSION" -o:speed -out:"$PROJECT_ROOT"/"$APP_NAME" "$@"
}

vhs() {
  command vhs "$PROJECT_ROOT"/vhs/"$APP_NAME".tape
}

TIMEFORMAT=$'\nTask completed in %3lR'
time "${@:-help}"
